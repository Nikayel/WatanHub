{
  "name": "WatanHub - Student Mentorship Platform",
  "short_name": "WatanHub",
  "description": "Connect with mentors, access scholarships, and advance your educational journey with WatanHub's comprehensive student support platform.",
  "id": "/",
  "start_url": "/",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "orientation": "portrait-primary",
  "theme_color": "#4F46E5",
  "background_color": "#F8FAFC",
  "scope": "/",
  "categories": [
    "education",
    "social",
    "productivity"
  ],
  "lang": "en-US",
  "dir": "ltr",
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "icons": [
    {
      "src": "favicon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "web-app-manifest-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "web-app-manifest-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/Home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "WatanHub Home - Connect with mentors and explore opportunities"
    },
    {
      "src": "screenshots/Admin1.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Student Dashboard - Track your progress and goals"
    }
  ],
  "shortcuts": [
    {
      "name": "Student Dashboard",
      "short_name": "Dashboard",
      "description": "Access your personalized student dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "web-app-manifest-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Find Mentors",
      "short_name": "Mentors",
      "description": "Connect with experienced mentors",
      "url": "/mentors",
      "icons": [
        {
          "src": "web-app-manifest-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Get Involved",
      "short_name": "Join",
      "description": "Apply to join our team or become a mentor",
      "url": "/get-involved",
      "icons": [
        {
          "src": "web-app-manifest-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Profile",
      "short_name": "Profile",
      "description": "Manage your student profile",
      "url": "/profile",
      "icons": [
        {
          "src": "web-app-manifest-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/contact?email=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/profile",
      "accept": {
        "application/pdf": [
          ".pdf"
        ],
        "image/*": [
          ".jpg",
          ".jpeg",
          ".png",
          ".webp"
        ]
      }
    }
  ],
  "share_target": {
    "action": "/get-involved",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}